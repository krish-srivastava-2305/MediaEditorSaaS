generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id             String   @id @default(cuid())
  title          String
  description    String?
  publicId       String
  compressedSize String
  originalSize   String
  duration       String
  createdAt      DateTime @default(now())
  updateAt       DateTime @updatedAt
}
